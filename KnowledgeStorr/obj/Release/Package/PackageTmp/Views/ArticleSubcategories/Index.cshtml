@model IEnumerable<KnowledgeStorr.Models.ArticleSubcategory>

@{
    ViewBag.Title = "Subcategories";
}

<h2>Subcategories</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Category Name")
        </th>
        <th>
            @Html.DisplayName("Subcategory Name")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ArticleCategory.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubcategoryName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SubcategoryId }) | 
            @Html.ActionLink("Delete", "Delete", new { id=item.SubcategoryId })
        </td>
    </tr>
}

</table>
