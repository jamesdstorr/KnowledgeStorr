@model KnowledgeStorr.Models.Article

@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model => model.ArticleName)</h2>

<div>        
    <dl class="dl-horizontal">      
        <dt>
            @Html.DisplayName("Created By")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.user.FirstName) @Html.DisplayFor(model => model.user.Surname) 
        </dd>
        <dt>
            @Html.DisplayName("Email")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.user.Email)
        </dd>      

        <dt>
            @Html.DisplayName("Created On")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ArticleCreated)
        </dd>

       

    </dl>
</div>
<div class="panel">
    <div class="panel-default">
        <h4>@Html.DisplayName("Article")</h4>
        <div class="body-content">
            @Html.Raw(Model.ArticleContents)
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ArticleId }) |
    @Html.ActionLink("Back", "Index", "Home")
</p>
